<!-- Shared dimensions -->

  

<!-- Sales -->
<Cube name="purchasing" defaultMeasure="Purchasing Cost">
  <!-- Use annotations to provide translations of this cube's caption and
       description into German and French. Use of annotations in this manner is
       experimental and unsupported; just for testing right now. -->
  
  <Table name="purchasing"/>

<Dimension name="TIme" foreignKey="time_id">
    <Hierarchy hasAll="true" allMemberName="All Times" primaryKey="time_id">
      <Table name="time" />
      <Level name="Year" column="tahun" type="Numeric" uniqueMembers="true"
          levelType="TimeYears"/>
      <Level name="Month" column="bulan" uniqueMembers="false" type="Numeric"
          levelType="TimeMonths"/>
      <Level name="Date" column="tanggal" uniqueMembers="false" type="Numeric"
          levelType="TimeDays"/>
    </Hierarchy>
</Dimension>

<Dimension name="Product" foreignKey ="ProductID">
      <Hierarchy hasAll="true" allMemberName="All Products" primaryKey ="ProductID">
        <Table name="dim_product"/>
        <Level name="Product Category" column="CategoryName"/>
        <Level name="Product SubCategory" column="SubCategoryName"/>
        <Level name="Name" column="Name"/>
      </Hierarchy>
</Dimension>

  <Dimension name="Vendor" foreignKey = "VendorID">
    <Hierarchy hasAll="true" allMemberName="All Vendors" primaryKey ="VendorID">
      <Table name="dim_vendor" />
      <Level name="Name" column="name"/>
      <Level name="Account Number" column="AccountNumber"/>
    </Hierarchy>
  </Dimension>

  <Dimension name="Shipping" foreignKey = "ShipMethodID">
    <Hierarchy hasAll="true" allMemberName="All Shipping" primaryKey ="ShipMethodID">
      <Table name="shipmethod" />
      <Level name="Name" column="Name"/>
    </Hierarchy>
  </Dimension>

  

  <Measure name="Purchasing Cost" column="Biaya_purchasing" aggregator="sum"
      formatString="Standard"/>
  
</Cube>



</Schema>
